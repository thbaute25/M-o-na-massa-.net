@page "/Profissionais"
@model MaoNaMassa.API.Pages.ProfissionaisModel
@{
    ViewData["Title"] = "Profissionais";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-people fs-1 text-primary me-3"></i>
            <div>
                <h1 class="mb-0">Profissionais Certificados</h1>
                <p class="text-muted small mb-0">Conheça profissionais qualificados e avaliados</p>
            </div>
        </div>
        <a href="/profissional/criar" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Criar Perfil Profissional
        </a>
    </div>

    @if (Model.Profissionais.Any())
    {
        <div class="row g-4">
            @foreach (var profissional in Model.Profissionais)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                @if (profissional.Disponivel)
                                {
                                    <span class="badge bg-success mb-2">
                                        <i class="bi bi-check-circle me-1"></i>Disponível
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary mb-2">
                                        <i class="bi bi-x-circle me-1"></i>Indisponível
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(profissional.AreaInteresse))
                                {
                                    <span class="badge bg-primary">@profissional.AreaInteresse</span>
                                }
                            </div>
                            
                            <h5 class="card-title">@profissional.NomeUsuario</h5>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-geo-alt me-1"></i>@profissional.CidadeUsuario
                            </p>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-envelope me-1"></i>@profissional.EmailUsuario
                            </p>
                            
                            <p class="card-text text-muted flex-grow-1">
                                @(profissional.Descricao.Length > 120 ? profissional.Descricao.Substring(0, 120) + "..." : profissional.Descricao)
                            </p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    @if (profissional.AvaliacaoMedia.HasValue)
                                    {
                                        <div>
                                            <span class="text-warning">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < Math.Round(profissional.AvaliacaoMedia.Value))
                                                    {
                                                        <i class="bi bi-star-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star"></i>
                                                    }
                                                }
                                            </span>
                                            <span class="ms-2 fw-bold">@profissional.AvaliacaoMedia.Value.ToString("F1")</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem avaliações</span>
                                    }
                                    <div class="text-muted small">
                                        <i class="bi bi-chat-left-text me-1"></i>@profissional.TotalAvaliacoes avaliações
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3 text-muted small">
                                    <span><i class="bi bi-briefcase me-1"></i>@profissional.TotalServicos serviços</span>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <a href="/profissional/@profissional.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-eye me-2"></i>Ver Perfil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h4>Nenhum profissional encontrado</h4>
            <p class="mb-4">Ainda não há profissionais cadastrados no sistema.</p>
            <a href="/profissional/criar" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Criar Primeiro Perfil Profissional
            </a>
        </div>
    }

    <div class="mt-5">
        <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">
                <button class="btn btn-link text-white text-decoration-none p-0 w-100 text-start" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#apiEndpoints" 
                        aria-expanded="false" 
                        aria-controls="apiEndpoints">
                    <i class="bi bi-code-square me-2"></i>
                    <strong>API Endpoints</strong>
                    <i class="bi bi-chevron-down float-end"></i>
                </button>
            </div>
            <div id="apiEndpoints" class="collapse">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>GET /api/profissionais</strong> - Listar todos os profissionais (com paginação)
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/profissionais/{id}</strong> - Buscar profissional por ID
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/profissionais/search</strong> - Buscar com filtros (cidade, área, avaliação)
                        </li>
                        <li class="list-group-item">
                            <strong>POST /api/profissionais</strong> - Criar perfil profissional
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a href="/swagger" class="btn btn-sm btn-outline-primary" target="_blank">
                            <i class="bi bi-code-square me-2"></i>Testar API no Swagger
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@page "/Profissionais"
@model MaoNaMassa.API.Pages.ProfissionaisModel
@{
    ViewData["Title"] = "Profissionais";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-people fs-1 text-primary me-3"></i>
        <div>
            <h1 class="mb-0">Profissionais Certificados</h1>
            <p class="text-muted small mb-0">Conheça profissionais qualificados e avaliados</p>
        </div>
    </div>
    
    <div class="alert alert-info">
        <h5><i class="bi bi-person-check me-2"></i>Conheça nossos profissionais</h5>
        <p>Use a <a href="/swagger" target="_blank">API</a> para buscar profissionais disponíveis.</p>
        <p><strong>Endpoint:</strong> <code>GET /api/profissionais/search</code></p>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>API Endpoints</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>GET /api/profissionais</strong> - Listar todos os profissionais (com paginação)
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/profissionais/{id}</strong> - Buscar profissional por ID
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/profissionais/search</strong> - Buscar com filtros (cidade, área, avaliação)
                        </li>
                        <li class="list-group-item">
                            <strong>POST /api/profissionais</strong> - Criar perfil profissional
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/swagger" class="btn btn-primary" target="_blank">Testar API no Swagger</a>
        <a href="/Home" class="btn btn-secondary">Voltar</a>
    </div>
</div>


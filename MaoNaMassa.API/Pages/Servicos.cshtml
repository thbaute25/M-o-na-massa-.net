@page "/Servicos"
@model MaoNaMassa.API.Pages.ServicosModel
@{
    ViewData["Title"] = "Serviços";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-briefcase fs-1 text-primary me-3"></i>
            <div>
                <h1 class="mb-0">Serviços Disponíveis</h1>
                <p class="text-muted small mb-0">Encontre profissionais qualificados para seus projetos</p>
            </div>
        </div>
        <a href="/servico/criar" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Oferecer Serviço
        </a>
    </div>

    @if (Model.Servicos.Any())
    {
        <div class="row g-4">
            @foreach (var servico in Model.Servicos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <span class="badge bg-primary mb-2">
                                    <i class="bi bi-geo-alt me-1"></i>@servico.Cidade
                                </span>
                                @if (servico.Preco.HasValue)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-currency-dollar me-1"></i>R$ @servico.Preco.Value.ToString("F2")
                                    </span>
                                }
                            </div>
                            
                            <h5 class="card-title">@servico.Titulo</h5>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-person me-1"></i>@servico.NomeProfissional
                            </p>
                            
                            <p class="card-text text-muted flex-grow-1">
                                @(servico.Descricao.Length > 120 ? servico.Descricao.Substring(0, 120) + "..." : servico.Descricao)
                            </p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    @if (servico.AvaliacaoMedia.HasValue)
                                    {
                                        <div>
                                            <span class="text-warning">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < Math.Round(servico.AvaliacaoMedia.Value))
                                                    {
                                                        <i class="bi bi-star-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star"></i>
                                                    }
                                                }
                                            </span>
                                            <span class="ms-2 fw-bold">@servico.AvaliacaoMedia.Value.ToString("F1")</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem avaliações</span>
                                    }
                                    <div class="text-muted small">
                                        <i class="bi bi-chat-left-text me-1"></i>@servico.TotalAvaliacoes avaliações
                                    </div>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <a href="/servico/@servico.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-eye me-2"></i>Ver Detalhes
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>
                                Publicado em @servico.DataPublicacao.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h4>Nenhum serviço encontrado</h4>
            <p class="mb-4">Ainda não há serviços cadastrados no sistema.</p>
            <a href="/servico/criar" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Oferecer Primeiro Serviço
            </a>
        </div>
    }

    <div class="mt-5">
        <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">
                <button class="btn btn-link text-white text-decoration-none p-0 w-100 text-start" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#apiEndpoints" 
                        aria-expanded="false" 
                        aria-controls="apiEndpoints">
                    <i class="bi bi-code-square me-2"></i>
                    <strong>API Endpoints</strong>
                    <i class="bi bi-chevron-down float-end"></i>
                </button>
            </div>
            <div id="apiEndpoints" class="collapse">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>GET /api/servicos</strong> - Listar todos os serviços (com paginação)
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/servicos/{id}</strong> - Buscar serviço por ID
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/servicos/search</strong> - Busca avançada com filtros (cidade, termo, preço, avaliação)
                        </li>
                        <li class="list-group-item">
                            <strong>POST /api/servicos</strong> - Criar novo serviço
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a href="/swagger" class="btn btn-sm btn-outline-primary" target="_blank">
                            <i class="bi bi-code-square me-2"></i>Testar API no Swagger
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


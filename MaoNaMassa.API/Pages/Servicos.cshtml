@page "/Servicos"
@model MaoNaMassa.API.Pages.ServicosModel
@{
    ViewData["Title"] = "Serviços";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-briefcase fs-1 text-primary me-3"></i>
        <div>
            <h1 class="mb-0">Serviços Disponíveis</h1>
            <p class="text-muted small mb-0">Encontre profissionais qualificados para seus projetos</p>
        </div>
    </div>
    
    <div class="alert alert-info">
        <h5><i class="bi bi-tools me-2"></i>Encontre profissionais qualificados</h5>
        <p>Use a <a href="/swagger" target="_blank">API</a> para buscar serviços oferecidos pelos profissionais.</p>
        <p><strong>Endpoint:</strong> <code>GET /api/servicos/search</code></p>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>API Endpoints</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>GET /api/servicos</strong> - Listar todos os serviços (com paginação)
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/servicos/{id}</strong> - Buscar serviço por ID
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/servicos/search</strong> - Busca avançada com filtros (cidade, termo, preço, avaliação)
                        </li>
                        <li class="list-group-item">
                            <strong>POST /api/servicos</strong> - Criar novo serviço
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/swagger" class="btn btn-primary" target="_blank">Testar API no Swagger</a>
        <a href="/Home" class="btn btn-secondary">Voltar</a>
    </div>
</div>


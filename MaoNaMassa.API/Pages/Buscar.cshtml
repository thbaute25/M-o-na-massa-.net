@page "/buscar"
@model MaoNaMassa.API.Pages.BuscarModel
@{
    ViewData["Title"] = "Buscar";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-search fs-1 text-primary me-3"></i>
        <div>
            <h1 class="mb-0">Buscar</h1>
            <p class="text-muted small mb-0">Encontre cursos, serviços e profissionais</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Busca Personalizada</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="/buscar">
                        <div class="mb-3">
                            <label for="termo" class="form-label">Termo de Busca</label>
                            <input type="text" class="form-control" id="termo" name="termo" 
                                   value="@Model.Termo" placeholder="Digite o que deseja buscar...">
                        </div>
                        <div class="mb-3">
                            <label for="tipo" class="form-label">Tipo</label>
                            <select class="form-select" id="tipo" name="tipo">
                                <option value="">Todos</option>
                                <option value="curso" selected="@(Model.Tipo == "curso")">Cursos</option>
                                <option value="servico" selected="@(Model.Tipo == "servico")">Serviços</option>
                                <option value="profissional" selected="@(Model.Tipo == "profissional")">Profissionais</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="cidade" class="form-label">Cidade (opcional)</label>
                            <input type="text" class="form-control" id="cidade" name="cidade" 
                                   value="@Model.Cidade" placeholder="Ex: São Paulo">
                        </div>
                        <button type="submit" class="btn btn-primary">Buscar</button>
                        <a href="/Home" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Termo))
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Resultados da Busca</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <p><strong>Termo:</strong> @Model.Termo</p>
                            <p><strong>Tipo:</strong> @(string.IsNullOrEmpty(Model.Tipo) ? "Todos" : Model.Tipo)</p>
                            @if (!string.IsNullOrEmpty(Model.Cidade))
                            {
                                <p><strong>Cidade:</strong> @Model.Cidade</p>
                            }
                        </div>

                        <h6>Endpoints da API para esta busca:</h6>
                        <ul>
                            @if (Model.Tipo == "curso" || string.IsNullOrEmpty(Model.Tipo))
                            {
                                <li>
                                    <code>GET /api/cursos/search?titulo=@Model.Termo</code>
                                    <a href="/swagger#/Cursos/Cursos_Search" target="_blank" class="btn btn-sm btn-outline-primary ms-2">Testar</a>
                                </li>
                            }
                            @if (Model.Tipo == "servico" || string.IsNullOrEmpty(Model.Tipo))
                            {
                                <li>
                                    <code>GET /api/servicos/search?termo=@Model.Termo&cidade=@Model.Cidade</code>
                                    <a href="/swagger#/Servicos/Servicos_Search" target="_blank" class="btn btn-sm btn-outline-primary ms-2">Testar</a>
                                </li>
                            }
                            @if (Model.Tipo == "profissional" || string.IsNullOrEmpty(Model.Tipo))
                            {
                                <li>
                                    <code>GET /api/profissionais/search?cidade=@Model.Cidade</code>
                                    <a href="/swagger#/Profissionais/Profissionais_Search" target="_blank" class="btn btn-sm btn-outline-primary ms-2">Testar</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


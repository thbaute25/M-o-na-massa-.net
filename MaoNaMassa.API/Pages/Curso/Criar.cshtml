@page "/curso/criar"
@model MaoNaMassa.API.Pages.Curso.CriarModel
@{
    ViewData["Title"] = "Criar Curso";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-book me-2"></i>Criar Novo Curso</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.MensagemErro))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@Model.MensagemErro
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.MensagemSucesso))
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@Model.MensagemSucesso
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Titulo" class="form-label"></label>
                            <input asp-for="ViewModel.Titulo" class="form-control" placeholder="Ex: Instalação Elétrica Residencial" />
                            <span asp-validation-for="ViewModel.Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Descricao" class="form-label"></label>
                            <textarea asp-for="ViewModel.Descricao" class="form-control" rows="5" placeholder="Descreva o conteúdo do curso..."></textarea>
                            <span asp-validation-for="ViewModel.Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Area" class="form-label"></label>
                                <input asp-for="ViewModel.Area" class="form-control" placeholder="Ex: Elétrica, Pintura, Encanamento" />
                                <span asp-validation-for="ViewModel.Area" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Nivel" class="form-label"></label>
                                <select asp-for="ViewModel.Nivel" class="form-select">
                                    <option value="">Selecione um nível</option>
                                    <option value="Iniciante">Iniciante</option>
                                    <option value="Intermediário">Intermediário</option>
                                    <option value="Avançado">Avançado</option>
                                </select>
                                <span asp-validation-for="ViewModel.Nivel" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Criar Curso
                            </button>
                            <a href="/Cursos" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


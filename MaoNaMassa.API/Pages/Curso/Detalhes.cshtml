@page "/curso/{id:guid}"
@model MaoNaMassa.API.Pages.Curso.DetalhesModel
@{
    ViewData["Title"] = Model.Curso?.Titulo ?? "Detalhes do Curso";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home">Início</a></li>
                    <li class="breadcrumb-item"><a href="/Cursos">Cursos</a></li>
                    <li class="breadcrumb-item active">Detalhes</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (Model.CursoCriado)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            <strong>Sucesso!</strong> Curso criado com sucesso!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.MensagemErro))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.MensagemErro
        </div>
    }

    @if (Model.Curso != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="mb-0">
                                <i class="bi bi-book me-2"></i>@Model.Curso.Titulo
                            </h2>
                            <div>
                                <span class="badge bg-light text-dark me-2">@Model.Curso.Area</span>
                                <span class="badge bg-secondary">@Model.Curso.Nivel</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <h5 class="text-muted mb-3">Descrição</h5>
                                <p class="lead">@Model.Curso.Descricao</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-play-circle fs-1 text-primary mb-2"></i>
                                        <h3 class="mb-0">@Model.Curso.TotalAulas</h3>
                                        <p class="text-muted mb-0">Aulas</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-question-circle fs-1 text-info mb-2"></i>
                                        <h3 class="mb-0">@Model.Curso.TotalQuizzes</h3>
                                        <p class="text-muted mb-0">Quizzes</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-award fs-1 text-warning mb-2"></i>
                                        <h3 class="mb-0">@Model.Curso.TotalCertificadosEmitidos</h3>
                                        <p class="text-muted mb-0">Certificados</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-calendar fs-1 text-success mb-2"></i>
                                        <h6 class="mb-0">@Model.Curso.DataCriacao.ToString("dd/MM/yyyy")</h6>
                                        <p class="text-muted mb-0">Criado em</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="/Cursos" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar para Cursos
                            </a>
                            <div>
                                <a href="/swagger#/Cursos/Cursos_GetById" target="_blank" class="btn btn-outline-primary">
                                    <i class="bi bi-code-square me-2"></i>Ver na API
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(Model.MensagemErro))
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>Carregando detalhes do curso...
        </div>
    }
</div>


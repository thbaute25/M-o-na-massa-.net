@page "/servico/criar"
@model MaoNaMassa.API.Pages.Servico.CriarModel
@{
    ViewData["Title"] = "Criar Serviço";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-briefcase me-2"></i>Criar Novo Serviço</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.MensagemErro))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@Model.MensagemErro
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.MensagemSucesso))
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@Model.MensagemSucesso
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.ProfissionalId" class="form-label"></label>
                            <input asp-for="ViewModel.ProfissionalId" type="text" class="form-control" placeholder="Digite o ID do profissional (GUID)" />
                            <small class="form-text text-muted">Você pode encontrar o ID do profissional na página de profissionais.</small>
                            <span asp-validation-for="ViewModel.ProfissionalId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Titulo" class="form-label"></label>
                            <input asp-for="ViewModel.Titulo" class="form-control" placeholder="Ex: Pintura Residencial" />
                            <span asp-validation-for="ViewModel.Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Descricao" class="form-label"></label>
                            <textarea asp-for="ViewModel.Descricao" class="form-control" rows="5" placeholder="Descreva o serviço oferecido..."></textarea>
                            <span asp-validation-for="ViewModel.Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Cidade" class="form-label"></label>
                                <input asp-for="ViewModel.Cidade" class="form-control" placeholder="Ex: São Paulo" />
                                <span asp-validation-for="ViewModel.Cidade" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Preco" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="ViewModel.Preco" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="ViewModel.Preco" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Criar Serviço
                            </button>
                            <a href="/Servicos" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


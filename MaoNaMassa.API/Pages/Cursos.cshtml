@page "/Cursos"
@model MaoNaMassa.API.Pages.CursosModel
@{
    ViewData["Title"] = "Cursos";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-book fs-1 text-primary me-3"></i>
        <div>
            <h1 class="mb-0">Cursos Disponíveis</h1>
            <p class="text-muted small mb-0">Aprenda novas habilidades e obtenha certificados</p>
        </div>
    </div>
    
    <div class="alert alert-info">
        <h5><i class="bi bi-info-circle me-2"></i>Explore nossos cursos</h5>
        <p>Use a <a href="/swagger" target="_blank">API</a> para listar e buscar cursos disponíveis.</p>
        <p><strong>Endpoint:</strong> <code>GET /api/cursos</code></p>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>API Endpoints</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>GET /api/cursos</strong> - Listar todos os cursos (com paginação)
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/cursos/{id}</strong> - Buscar curso por ID
                        </li>
                        <li class="list-group-item">
                            <strong>GET /api/cursos/search</strong> - Buscar cursos com filtros
                        </li>
                        <li class="list-group-item">
                            <strong>POST /api/cursos</strong> - Criar novo curso
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/swagger" class="btn btn-primary" target="_blank">Testar API no Swagger</a>
        <a href="/Home" class="btn btn-secondary">Voltar</a>
    </div>
</div>


@page "/Cursos"
@model MaoNaMassa.API.Pages.CursosModel
@{
    ViewData["Title"] = "Cursos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-book fs-1 text-primary me-3"></i>
            <div>
                <h1 class="mb-0">Cursos Disponíveis</h1>
                <p class="text-muted small mb-0">Aprenda novas habilidades e obtenha certificados</p>
            </div>
        </div>
        <a href="/curso/criar" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Criar Novo Curso
        </a>
    </div>

    @if (Model.Cursos.Any())
    {
        <div class="row g-4">
            @foreach (var curso in Model.Cursos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <span class="badge bg-primary mb-2">@curso.Area</span>
                                <span class="badge bg-secondary">@curso.Nivel</span>
                            </div>
                            <h5 class="card-title">@curso.Titulo</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @(curso.Descricao.Length > 150 ? curso.Descricao.Substring(0, 150) + "..." : curso.Descricao)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3 text-muted small">
                                    <span><i class="bi bi-play-circle me-1"></i>@curso.TotalAulas aulas</span>
                                    <span><i class="bi bi-question-circle me-1"></i>@curso.TotalQuizzes quizzes</span>
                                    <span><i class="bi bi-award me-1"></i>@curso.TotalCertificadosEmitidos certificados</span>
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="/curso/@curso.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-eye me-2"></i>Ver Detalhes
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>
                                Criado em @curso.DataCriacao.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h4>Nenhum curso encontrado</h4>
            <p class="mb-4">Comece criando seu primeiro curso!</p>
            <a href="/curso/criar" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Criar Primeiro Curso
            </a>
        </div>
    }

    <div class="mt-5">
        <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">
                <button class="btn btn-link text-white text-decoration-none p-0 w-100 text-start" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#apiEndpoints" 
                        aria-expanded="false" 
                        aria-controls="apiEndpoints">
                    <h5 class="mb-0">
                        <i class="bi bi-code-square me-2"></i>API Endpoints
                        <i class="bi bi-chevron-down float-end"></i>
                    </h5>
                </button>
            </div>
            <div class="collapse" id="apiEndpoints">
                <div class="card-body">
                    <p class="text-muted small mb-3">
                        <i class="bi bi-info-circle me-1"></i>
                        Endpoints da API REST para integração programática
                    </p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <code class="text-primary">GET /api/cursos</code> - Listar todos os cursos (com paginação)
                        </li>
                        <li class="list-group-item">
                            <code class="text-primary">GET /api/cursos/{id}</code> - Buscar curso por ID
                        </li>
                        <li class="list-group-item">
                            <code class="text-primary">GET /api/cursos/search</code> - Buscar cursos com filtros
                        </li>
                        <li class="list-group-item">
                            <code class="text-success">POST /api/cursos</code> - Criar novo curso
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a href="/swagger" class="btn btn-outline-primary btn-sm" target="_blank">
                            <i class="bi bi-code-square me-2"></i>Testar API no Swagger
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

